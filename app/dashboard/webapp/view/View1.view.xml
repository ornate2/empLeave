<mvc:View
    controllerName="dashboard.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:l="sap.ui.layout"
    xmlns:core="sap.ui.core"
    displayBlock="true"
    xmlns="sap.m"
>
    <Page
        id="page"
        title="{i18n>title}"
    >
        <content>
            <Panel
                width="auto"
                class="sapUiResponsiveMargin"
                accessibleRole="Region"
            >
                <Title text="Employee" />
                <core:Fragment
                    fragmentName="dashboard.view.fragment.Employee"
                />
            </Panel>
            <Panel
                width="auto"
                class="sapUiResponsiveMargin"
            >
                <core:Fragment fragmentName="dashboard.view.fragment.HR" />
            </Panel>
            <Panel
                width="auto"
                class="sapUiResponsiveMargin"
            >
                <core:Fragment fragmentName="dashboard.view.fragment.Manager" />
            </Panel>
        </content>
    </Page>
</mvc:View>

